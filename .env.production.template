# 生产环境配置模板
# Production Environment Configuration Template
# 复制此文件为 .env.production 并填入实际值

# 环境设置
NODE_ENV=production

# 微信小程序配置
WECHAT_APP_ID=your_production_app_id
WECHAT_APP_SECRET=your_production_app_secret

# AI服务配置 - 图像识别
AI_VISION_API_KEY=your_vision_api_key
AI_VISION_SECRET_KEY=your_vision_secret_key
AI_VISION_ENDPOINT=https://vision.tencentcloudapi.com
AI_VISION_REGION=ap-beijing

# AI服务配置 - 文本生成
AI_TEXT_API_KEY=your_text_generation_api_key
AI_TEXT_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation
AI_TEXT_MODEL=qwen-turbo

# 服务器配置
API_HOST=api.foodiefinder.com
API_PORT=443
CDN_HOST=cdn.foodiefinder.com

# 数据库配置
DB_TYPE=mongodb
DB_HOST=your_mongodb_host
DB_PORT=27017
DB_NAME=foodiefinder_prod
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_SSL=true

# Redis配置
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# 安全配置
JWT_SECRET=your_jwt_secret_key_min_32_chars
ENCRYPTION_KEY=your_encryption_key_32_chars

# 日志配置
LOG_LEVEL=info
LOG_PATH=/var/log/foodiefinder
REMOTE_LOG_ENABLED=true
REMOTE_LOG_ENDPOINT=your_log_service_endpoint
REMOTE_LOG_API_KEY=your_log_service_api_key

# 监控配置
MONITORING_ENDPOINT=your_monitoring_endpoint
ERROR_TRACKING_DSN=your_error_tracking_dsn

# 第三方服务配置
# 短信服务
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key
SMS_SIGN_NAME=识食有方
SMS_TEMPLATE_CODE=your_sms_template_code

# 邮件服务
EMAIL_PROVIDER=smtp
EMAIL_HOST=your_email_host
EMAIL_PORT=587
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@foodiefinder.com

# 对象存储
STORAGE_PROVIDER=aliyun
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key
STORAGE_BUCKET=foodiefinder-prod
STORAGE_REGION=oss-cn-beijing
STORAGE_ENDPOINT=your_storage_endpoint

# SSL证书配置（如果使用HTTPS）
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CA_PATH=/path/to/ssl/ca.pem

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup/foodiefinder