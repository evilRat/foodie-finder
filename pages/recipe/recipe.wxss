.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.recipe-card {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.recipe-info {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ingredients-list {
  padding-left: 10rpx;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx dashed #f0f0f0;
}

.ingredient-name {
  color: #333;
  font-size: 28rpx;
}

.ingredient-amount {
  color: #ff6b00;
  font-size: 28rpx;
  font-weight: bold;
}

.steps-list {
  padding-left: 10rpx;
}

.step-item {
  display: flex;
  margin-bottom: 20rpx;
}

.step-number {
  color: #ff6b00;
  font-weight: bold;
  margin-right: 10rpx;
  font-size: 28rpx;
}

.step-description {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

.tips-content {
  display: block;
  background: #fff9f0;
  border-left: 6rpx solid #ff6b00;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.actions {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}

.action-button {
  background-color: #ff6b00;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  width: 60%;
  height: 80rpx;
}