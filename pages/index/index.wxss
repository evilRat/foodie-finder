.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-top: 50rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-top: 10rpx;
}

.search-section {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-container {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  padding: 15rpx 10rpx;
  font-size: 28rpx;
}

.clear-icon {
  padding: 10rpx;
}

.search-button {
  width: 100%;
  background-color: #ff6b00;
  color: white;
  border-radius: 50rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  height: 80rpx;
}

.divider {
  text-align: center;
  margin: 40rpx 0;
  position: relative;
}

.divider-text {
  background: #f5f5f5;
  padding: 0 20rpx;
  color: #999;
  position: relative;
  z-index: 1;
}

.divider::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  height: 1rpx;
  background: #e0e0e0;
  z-index: 0;
}

.image-upload-section {
  background: white;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.upload-options {
  display: flex;
  justify-content: space-around;
}

.upload-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 30rpx 20rpx;
  width: 40%;
}

.upload-button text {
  margin-top: 10rpx;
  color: #666;
}

.processing {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.instructions {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx 20rpx;
  margin-top: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.instructions-title {
  font-weight: bold;
  font-size: 32rpx;
  display: block;
  margin-bottom: 20rpx;
  color: #333;
}

.instructions-list text {
  display: block;
  margin-bottom: 15rpx;
  color: #666;
  font-size: 26rpx;
}