# 开发环境配置模板
# Development Environment Configuration Template
# 复制此文件为 .env.development 并填入实际值

# 环境设置
NODE_ENV=development

# 微信小程序配置（开发版）
WECHAT_DEV_APP_ID=your_development_app_id
WECHAT_DEV_APP_SECRET=your_development_app_secret

# AI服务配置 - 图像识别（开发环境）
AI_VISION_DEV_API_KEY=your_dev_vision_api_key
AI_VISION_DEV_SECRET_KEY=your_dev_vision_secret_key
AI_VISION_DEV_ENDPOINT=https://vision.tencentcloudapi.com
AI_VISION_DEV_REGION=ap-beijing

# AI服务配置 - 文本生成（开发环境）
AI_TEXT_DEV_API_KEY=your_dev_text_generation_api_key
AI_TEXT_DEV_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation
AI_TEXT_DEV_MODEL=qwen-turbo

# 服务器配置（开发环境）
DEV_API_HOST=localhost
DEV_API_PORT=3000
DEV_CDN_HOST=localhost:3000

# 数据库配置（开发环境）
DEV_DB_TYPE=mongodb
DEV_DB_HOST=localhost
DEV_DB_PORT=27017
DEV_DB_NAME=foodiefinder_dev
DEV_DB_USERNAME=
DEV_DB_PASSWORD=

# Redis配置（开发环境）
DEV_REDIS_HOST=localhost
DEV_REDIS_PORT=6379
DEV_REDIS_PASSWORD=
DEV_REDIS_DB=1

# 安全配置（开发环境）
DEV_JWT_SECRET=dev_jwt_secret_key_for_development_only
DEV_JWT_EXPIRES_IN=24h
DEV_ENCRYPTION_KEY=dev_encryption_key_32_characters

# 日志配置（开发环境）
DEV_LOG_LEVEL=debug

# 邮件服务（开发环境）
DEV_EMAIL_HOST=smtp.gmail.com
DEV_EMAIL_PORT=587
DEV_EMAIL_USERNAME=your_dev_email@gmail.com
DEV_EMAIL_PASSWORD=your_dev_email_password
DEV_EMAIL_FROM=dev@foodiefinder.com

# 开发工具配置
ENABLE_MOCK=false
HOT_RELOAD_PORT=3001
DEBUG_VERBOSE=true

# 测试配置
TEST_DB_NAME=foodiefinder_test
TEST_TIMEOUT=30000